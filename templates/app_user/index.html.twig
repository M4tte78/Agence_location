{% extends 'base.html.twig' %}

{% block title %}AppUser index{% endblock %}

{% block body %}
    <h1>AppUser index</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for app_user in app_users %}
            <tr>
                <td>{{ app_user.id }}</td>
                <td>{{ app_user.email }}</td>
                <td>{{ app_user.roles|join(', ') }}</td> <!-- Affiche les rÃ´les sous forme de liste -->
                <td>
                    <a href="{{ path('app_user_show', {'id': app_user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': app_user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
